<Page
    x:Class="DubHero_UI.Vistas.Juego"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DubHero_UI.Vistas"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        RequestedTheme="Dark"
>
    <Page.Resources>
        <Style TargetType="Polyline" x:Key="propLineas">
            <Setter Property="Stroke" Value="Orange"/>
            <Setter Property="StrokeThickness" Value="7"/>
        </Style>
    </Page.Resources>
    <RelativePanel>
        <Canvas x:Name="pistaObjetivo">
            <Image Source="../Assets/Imagenes/altavozJuego.png" Width="500" Canvas.Left="482" Canvas.ZIndex="4"></Image>
            <Polyline x:Name="l1" Style="{StaticResource propLineas }" Points="485,270,150,1000"/>
            <Polyline x:Name="l2" Style="{StaticResource propLineas }" Points="580,270,400,1000"/>
            <Polyline x:Name="l3" Style="{StaticResource propLineas }" Points="680,270,650,1000"/>
            <Polyline x:Name="l4" Style="{StaticResource propLineas }" Points="780,270,900,1000"/>
            <Polyline x:Name="l5" Style="{StaticResource propLineas }" Points="880,270,1150,1000"/>
            <Polyline x:Name="l6" Style="{StaticResource propLineas }" Points="980,270,1380,1000"/>
        </Canvas>
        <Line X1="0" X2="1200" RelativePanel.AlignBottomWithPanel="True" Margin="150,20" StrokeThickness="4" Fill="Black"/>
        <Ellipse Width="190" Height="190" Fill="Aqua" RelativePanel.AlignBottomWithPanel="True" Margin="230,30"/>
    </RelativePanel>

